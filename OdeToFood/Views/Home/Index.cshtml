@model IEnumerable<RestaurantListViewModel>
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.AjaxBeginForm(new AjaxOptions
{
    HttpMethod = "get",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "restaurantList"
}))
{
    <input type="search" name="searchTerm" />
    <input type="submit" name="Search By Name" />
}

<partial name="_Restaurants" model="Model" />